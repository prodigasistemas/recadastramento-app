<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutDadosResponsavel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_rounded_corners"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Cliente Responsável: "
            android:textColor="@color/textColorYellowBackground"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/novoResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/txtResponsavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Responsável:"
        android:textColor="@color/textColorYellowBackground"
        android:textSize="15dp" >
    </TextView>

    <EditText
        android:id="@+id/nomeResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded_corners"
        android:inputType="textCapCharacters"
        android:maxLength="50" >

        <requestFocus>
        </requestFocus>
    </EditText>

    <TextView
        android:id="@+id/txtTipoPessoaResponsavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Pessoa:"
        android:textColor="@color/textColorYellowBackground"
        android:textSize="15dp" >
    </TextView>

    <Spinner
        android:id="@+id/spinnerTipoPessoaResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" >
    </Spinner>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtCpfCnpjResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="180dp"
            android:text="CPF:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtRgResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RG:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/cpfCnpjResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="number"
            android:maxLength="18"
            android:maxWidth="185dp"
            android:minWidth="160dp" >
        </EditText>

        <EditText
            android:id="@+id/rgResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="number"
            android:maxLength="13" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTxtNisResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtNIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NIS:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="17dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNisResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nisResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="text"
            android:maxLength="20">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtUfResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="110dp"
            android:text="UF:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtSexoResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ufResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:drawSelectorOnTop="true"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:minWidth="50dp" >
        </EditText>

        <Spinner
            android:id="@+id/spinnerSexoResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:minWidth="200dp" >
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTelefoneResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:text="Telefone:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtCelularResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celular:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/foneResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="phone"
            android:maxLength="14"
            android:minWidth="150dp" >
        </EditText>

        <EditText
            android:id="@+id/celularResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="phone"
            android:maxLength="14" >
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/txtEmailResponsavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textColor="@color/textColorYellowBackground"
        android:textSize="15dp" >
    </TextView>

    <EditText
        android:id="@+id/emailResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded_corners"
        android:inputType="textEmailAddress"
        android:maxLength="30" >
    </EditText>

    <TextView
        android:id="@+id/txtTipoLogradouroResponsavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo Logradouro:"
        android:textColor="@color/textColorYellowBackground"
        android:textSize="15dp" >
    </TextView>

    <Spinner
        android:id="@+id/spinnerTipoLogradouroResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" >
    </Spinner>

    <TextView
        android:id="@+id/txtLogradouroResponsavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logradouro do Responsável:"
        android:textColor="@color/textColorYellowBackground"
        android:textSize="15dp" >
    </TextView>

    <EditText
        android:id="@+id/logradouroResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded_corners"
        android:inputType="textCapCharacters"
        android:maxLength="40" >
    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:minWidth="140dp"
            android:text="Nº:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtMunicipio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Município:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/numeroResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="textCapCharacters"
            android:maxLength="5"
            android:minWidth="80dp" >
        </EditText>

        <EditText
            android:id="@+id/municipioResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="textCapCharacters"
            android:maxLength="15" 
            android:digits="abcdefghijklmnopqrstuvw xyzABCDEFGHIJKLMNOPQRSTUVXZWY">
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/txtComplemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complemento:"
        android:textColor="@color/textColorYellowBackground"
        android:textSize="15dp" >
    </TextView>

    <EditText
        android:id="@+id/complementoResponsavel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded_corners"
        android:inputType="textCapCharacters"
        android:maxLength="25" >
    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtBairroResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp"
            android:text="Bairro:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>

        <TextView
            android:id="@+id/txtCepResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEP:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/bairroResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="textCapCharacters"
            android:maxLength="20"
            android:maxWidth="185dp"
            android:minWidth="160dp"
            android:digits="abcdefghijklmnopqrstuvw xyzABCDEFGHIJKLMNOPQRSTUVXZWY1234567890" >
        </EditText>

        <EditText
            android:id="@+id/cepResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:inputType="number"
            android:maxLength="9"
            android:minWidth="135dp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tipoendereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Endereço:"
            android:textColor="@color/textColorYellowBackground"
            android:textSize="15dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroupTipoEnderecoResponsavel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioResidencialResponsavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residencial"
                android:textColor="@color/textColorYellowBackground" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radioComercialResponsavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comercial"
                android:textColor="@color/textColorYellowBackground" >
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>